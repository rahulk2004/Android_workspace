<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <!-- ScrollView to allow scrolling content -->
    <android.widget.ScrollView
        android:id="@+id/rtsc2llg463"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First LinearLayout for Image and Text -->
            <LinearLayout
                android:id="@+id/r39qy3fix12c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="214dp"
                android:layout_marginBottom="37dp">

                <ImageView
                    android:id="@+id/rmtb5p9puiq"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_marginEnd="14dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/r5izh4oxwttg"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How it works"/>
            </LinearLayout>

            <!-- ImageView -->
            <ImageView
                android:id="@+id/rj8xxwkn90yi"
                android:layout_width="match_parent"
                android:layout_height="353dp"
                android:layout_marginBottom="33dp"
                android:layout_marginHorizontal="29dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"/>

            <!-- Title TextView -->
            <TextView
                android:id="@+id/rcqrkdrnb9wk"
                android:textColor="#292929"
                android:textSize="24sp"
                android:layout_marginBottom="42dp"
                android:layout_marginHorizontal="103dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage your \nEveryday task list"/>

            <!-- Description TextView -->
            <TextView
                android:id="@+id/r77hlvmmfdyx"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_marginBottom="26dp"
                android:layout_marginHorizontal="46dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit..."/>

            <!-- Button for Get Started -->
            <LinearLayout
                android:id="@+id/r37q194mlde9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginBottom="31dp">

                <LinearLayout
                    android:id="@+id/rmx9u30kesgp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cr34bec8045"
                    android:paddingVertical="18dp"
                    android:paddingHorizontal="30dp"
                    android:elevation="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rgw0njehjgpl"
                        android:textColor="#FFFFFF"
                        android:textSize="19sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Started"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Footer Image -->
            <ImageView
                android:id="@+id/rw4u0fchw3l"
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:layout_marginHorizontal="174dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </android.widget.ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
