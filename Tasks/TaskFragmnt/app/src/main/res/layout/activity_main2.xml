        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment to Activity "
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
